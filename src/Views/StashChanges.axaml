<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:m="using:SourceGit.Models"
             xmlns:vm="using:SourceGit.ViewModels"
             xmlns:v="using:SourceGit.Views"
             xmlns:console="https://github.com/jinek/consolonia"
             mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="450"
             x:Class="SourceGit.Views.StashChanges"
             x:DataType="vm:StashChanges">
  <StackPanel Orientation="Vertical" Margin="{console:OnPlatform Default='8,0,0,0', Console='1,0,0,0'}">
    <TextBlock FontSize="18"
               Classes="bold"
               Text="{DynamicResource Text.Stash.Title}"/>
    <Grid Margin="{console:OnPlatform Default='8,20,0,0', Console='1,1,0,0'}" RowDefinitions="{console:OnPlatform Default='32,Auto,Auto,Auto,Auto', Console='3,Auto,Auto,Auto,Auto'}" ColumnDefinitions="{console:OnPlatform Default='100,356', Console='10,36'}">
      <TextBlock Grid.Row="0" Grid.Column="0"
                 HorizontalAlignment="Right"
                 Margin="{console:OnPlatform Default='8,0', Console='1,0'}"
                 Text="{DynamicResource Text.Stash.Mode}"/>
      <ComboBox Grid.Row="0" Grid.Column="1"
                MinHeight="{console:OnPlatform Default='28', Console='2'}"
                Padding="{console:OnPlatform Default='8,0', Console='1,0'}"
                ItemsSource="{Binding Source={x:Static m:DealWithChangesAfterStashing.Supported}}"
                SelectedIndex="{Binding ChangesAfterStashing, Mode=TwoWay}"
                HorizontalAlignment="Stretch">
        <ComboBox.ItemTemplate>
          <DataTemplate DataType="m:DealWithChangesAfterStashing">
            <Grid Height="{console:OnPlatform Default='20', Console='2'}" ColumnDefinitions="{console:OnPlatform Default='Auto,*', Console='Auto,*'}">
              <TextBlock Grid.Column="0" Text="{Binding Label}"/>
              <TextBlock Grid.Column="1" Text="{Binding Desc}" Margin="{console:OnPlatform Default='8,0', Console='1,0'}" FontSize="11" Foreground="{DynamicResource Brush.FG2}"/>
            </Grid>
          </DataTemplate>
        </ComboBox.ItemTemplate>
      </ComboBox>

      <TextBlock Grid.Row="1" Grid.Column="0"
                 HorizontalAlignment="Right" VerticalAlignment="Top"
                 Margin="{console:OnPlatform Default='0,8,8,0', Console='0,1,1,0'}"
                 Text="{DynamicResource Text.Stash.Message}"/>
      <TextBox Grid.Row="1" Grid.Column="1"
               Height="{console:OnPlatform Default='100', Console='10'}"
               Margin="{console:OnPlatform Default='0,4,0,0', Console='0,1,0,0'}"
               CornerRadius="{console:OnPlatform Default='3', Console='0'}"
               Text="{Binding Message, Mode=TwoWay}"
               Watermark="{DynamicResource Text.Stash.Message.Placeholder}"
               AcceptsReturn="True"
               AcceptsTab="True"
               VerticalContentAlignment="Top"
               Padding="{console:OnPlatform Default='4', Console='1'}"
               v:AutoFocusBehaviour.IsEnabled="True"
               Tag="{Binding Source={x:Static v:StealHotKey.Enter}}"/>

      <CheckBox Grid.Row="2" Grid.Column="1"
                Height="{console:OnPlatform Default='32', Console='3'}"
                Content="{DynamicResource Text.Stash.OnlyStagedChanges}"
                IsChecked="{Binding OnlyStaged, Mode=TwoWay}"
                IsVisible="{Binding !HasSelectedFiles}"
                ToolTip.Tip="--staged"/>

      <CheckBox Grid.Row="3" Grid.Column="1"
                Height="{console:OnPlatform Default='32', Console='3'}"
                Content="{DynamicResource Text.Stash.IncludeUntracked}"
                IsChecked="{Binding IncludeUntracked, Mode=TwoWay}"
                ToolTip.Tip="--include-untracked">
        <CheckBox.IsVisible>
          <MultiBinding Converter="{x:Static BoolConverters.And}">
            <Binding Path="HasSelectedFiles" Converter="{x:Static BoolConverters.Not}"/>
            <Binding Path="OnlyStaged" Converter="{x:Static BoolConverters.Not}"/>
          </MultiBinding>
        </CheckBox.IsVisible>
      </CheckBox>

      <TextBlock Grid.Row="4" Grid.Column="1"
                 Classes="small"
                 Margin="{console:OnPlatform Default='0,4,0,0', Console='0,1,0,0'}"
                 Text="{DynamicResource Text.Stash.TipForSelectedFiles}"
                 TextWrapping="Wrap"
                 Foreground="{DynamicResource Brush.FG2}"
                 IsVisible="{Binding HasSelectedFiles}"/>
    </Grid>
  </StackPanel>
</UserControl>