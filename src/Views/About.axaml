<v:ChromelessWindow xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:v="using:SourceGit.Views"
                    xmlns:console="https://github.com/jinek/consolonia"
                    mc:Ignorable="d" d:DesignWidth="520" d:DesignHeight="230"
                    x:Class="SourceGit.Views.About"
                    x:Name="ThisControl"
                    Icon="/App.ico"
                    Title="{DynamicResource Text.About}"
                    Width="520" Height="230"
                    CanResize="False"
                    WindowStartupLocation="CenterOwner">
  <Grid RowDefinitions="{console:OnPlatform Default='Auto,*', Console='Auto,*'}">
    <!-- TitleBar -->
    <Grid Grid.Row="0" Height="28" IsVisible="{Binding !#ThisControl.UseSystemWindowFrame}">
      <Border Background="{DynamicResource Brush.TitleBar}"
              BorderThickness="0,0,0,1" BorderBrush="{DynamicResource Brush.Border0}"
              PointerPressed="BeginMoveWindow"/>

      <console:OnPlatform>
        <console:OnPlatform.Default>
          <Path Width="14" Height="14"
                Margin="{console:OnPlatform Default='10,0,0,0', Console='1,0,0,0'}"
                HorizontalAlignment="Left"
                Data="{StaticResource Icons.Info}"
                IsVisible="{OnPlatform True, macOS=False}"/>
        </console:OnPlatform.Default>
        <console:OnPlatform.Console>
          <TextBlock Text="{StaticResource TextIcons.Info}" HorizontalAlignment="Left"/>
        </console:OnPlatform.Console>
      </console:OnPlatform>

      <TextBlock Classes="bold"
                 Text="{DynamicResource Text.About}"
                 HorizontalAlignment="Center" VerticalAlignment="Center"
                 IsHitTestVisible="False"/>

      <v:CaptionButtons HorizontalAlignment="Right"
                        IsCloseButtonOnly="True"
                        IsVisible="{OnPlatform True, macOS=False}"/>
    </Grid>

    <Grid Grid.Row="1" Height="200" ColumnDefinitions="{console:OnPlatform Default='Auto,*', Console='Auto,*'}">
      <Image Grid.Column="0"
             Width="200" Height="200"
             Margin="{console:OnPlatform Default='8,0', Console='1,0'}"
             Source="/App.ico"
             HorizontalAlignment="Center"
             VerticalAlignment="Center"/>

      <Grid Grid.Column="1" Margin="{console:OnPlatform Default='0,0,8,0', Console='0,0,1,0'}" RowDefinitions="{console:OnPlatform Default='Auto,Auto,Auto,Auto', Console='Auto,Auto,Auto,Auto'}" VerticalAlignment="Center">
        <StackPanel Grid.Row="0" Height="40" Orientation="Horizontal">
          <TextBlock Classes="bold" Text="SourceGit" FontSize="32" />
          <Border Margin="{console:OnPlatform Default='12,0,0,0', Console='1,0,0,0'}" Height="20"
                  CornerRadius="{console:OnPlatform Default='10', Console='0'}"
                  Background="{DynamicResource Brush.Accent}"
                  Effect="drop-shadow(0 0 6 #40000000)"
                  Cursor="Hand"
                  PointerPressed="OnVisitReleaseNotes">
            <TextBlock x:Name="TxtVersion" Classes="primary" Margin="{console:OnPlatform Default='8,0', Console='1,0'}" FontSize="12" Foreground="White"/>
          </Border>
        </StackPanel>

        <Border Grid.Row="1" Margin="{console:OnPlatform Default='2,4,0,0', Console='1,1,0,0'}">
          <TextBlock Text="{DynamicResource Text.About.SubTitle}" FontSize="16" TextWrapping="Wrap"/>
        </Border>

        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="{console:OnPlatform Default='0,8,0,0', Console='0,1,0,0'}">
          <Button Width="18" Height="18" Classes="icon_button" Click="OnVisitWebsite" ToolTip.Tip="https://sourcegit-scm.github.io/">
            <console:OnPlatform>
              <console:OnPlatform.Default>
                <Path Width="16" Height="16" Data="{StaticResource Icons.Remotes}"/>
              </console:OnPlatform.Default>
              <console:OnPlatform.Console>
                <TextBlock Text="{StaticResource TextIcons.Remotes}"/>
              </console:OnPlatform.Console>
            </console:OnPlatform>
          </Button>

          <Button Width="18" Height="18" Margin="{console:OnPlatform Default='8,0,0,0', Console='1,0,0,0'}" Classes="icon_button" Click="OnVisitSourceCode" ToolTip.Tip="https://github.com/sourcegit-scm/sourcegit">
            <console:OnPlatform>
              <console:OnPlatform.Default>
                <Path Width="16" Height="16" Data="{StaticResource Icons.GitHub}"/>
              </console:OnPlatform.Default>
              <console:OnPlatform.Console>
                <TextBlock Text="{StaticResource TextIcons.GitHub}"/>
              </console:OnPlatform.Console>
            </console:OnPlatform>
          </Button>
        </StackPanel>

        <TextBlock Grid.Row="3" x:Name="TxtCopyright" Margin="{console:OnPlatform Default='0,40,0,0', Console='0,1,0,0'}" Foreground="{DynamicResource Brush.FG2}"/>
      </Grid>
    </Grid>
  </Grid>
</v:ChromelessWindow>
