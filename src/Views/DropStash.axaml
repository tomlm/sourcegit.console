<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:SourceGit.ViewModels"
             xmlns:console="https://github.com/jinek/consolonia"
             mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="450"
             x:Class="SourceGit.Views.DropStash"
             x:DataType="vm:DropStash">
  <StackPanel Orientation="Vertical" Margin="{console:OnPlatform Default='8,0,0,0', Console='1,0,0,0'}">
    <TextBlock FontSize="18"
               Classes="bold"
               Text="{DynamicResource Text.StashDropConfirm}"/>
    <Grid Margin="{console:OnPlatform Default='0,16,8,0', Console='0,1,1,0'}"
          Height="{console:OnPlatform Default='28', Console='2'}"
          ColumnDefinitions="{console:OnPlatform Default='120,*', Console='12,*'}">
      <TextBlock Grid.Column="0"
                 HorizontalAlignment="Right" VerticalAlignment="Center"
                 Margin="{console:OnPlatform Default='0,0,8,0', Console='0,0,1,0'}"
                 Text="{DynamicResource Text.StashDropConfirm.Label}"/>
      <Grid Grid.Column="1" ColumnDefinitions="Auto,Auto,*">
        <console:OnPlatform>
                    <console:OnPlatform.Default>
                      <Path Grid.Column="0"
                            Width="12" Height="12"
                            Margin="{console:OnPlatform Default='0,0,8,0', Console='0,0,1,0'}"
                            HorizontalAlignment="Left" VerticalAlignment="Center"
                            Data="{StaticResource Icons.Stashes}"/>
                    </console:OnPlatform.Default>
                    <console:OnPlatform.Console>
                      <TextBlock Grid.Column="0" Text="{StaticResource TextIcons.Stashes}"/>
        </console:OnPlatform.Console>
        </console:OnPlatform>
        <TextBlock Grid.Column="1" VerticalAlignment="Center" Classes="primary" Text="{Binding Stash.Name}" Foreground="DarkOrange"/>
        <TextBlock Grid.Column="2" VerticalAlignment="Center" Text="{Binding Stash.Subject}" TextTrimming="CharacterEllipsis" Margin="{console:OnPlatform Default='4,0,0,0', Console='1,0,0,0'}"/>
      </Grid>
    </Grid>
  </StackPanel>
</UserControl>

