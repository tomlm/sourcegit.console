<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:SourceGit.ViewModels"
             xmlns:console="https://github.com/jinek/consolonia"
             mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="450"
             x:Class="SourceGit.Views.FetchInto"
             x:DataType="vm:FetchInto">
  <StackPanel Orientation="Vertical" Margin="{console:OnPlatform Default='8,0', Console='1,0'}">
    <TextBlock FontSize="18"
               Classes="bold"
               Text="{DynamicResource Text.Fetch.Title}"/>
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="{console:OnPlatform Default='0,16,0,0', Console='0,1,0,0'}">
      <console:OnPlatform>
                <console:OnPlatform.Default>
                  <Path Width="14" Height="14" Data="{StaticResource Icons.Branch}"/>
                </console:OnPlatform.Default>
                <console:OnPlatform.Console>
                  <TextBlock Text="{StaticResource TextIcons.Branch}"/>
      </console:OnPlatform.Console>
      </console:OnPlatform>
      <TextBlock Text="{Binding Upstream.FriendlyName}" Margin="{console:OnPlatform Default='8,0,0,0', Console='1,0,0,0'}"/>
      <TextBlock Text="â†’" Margin="{console:OnPlatform Default='8,0', Console='1,0'}"/>
      <console:OnPlatform>
                <console:OnPlatform.Default>
                  <Path Width="14" Height="14" Data="{StaticResource Icons.Branch}"/>
                </console:OnPlatform.Default>
                <console:OnPlatform.Console>
                  <TextBlock Text="{StaticResource TextIcons.Branch}"/>
      </console:OnPlatform.Console>
      </console:OnPlatform>
      <TextBlock Text="{Binding Local.Name}" Margin="{console:OnPlatform Default='8,0,0,0', Console='1,0,0,0'}"/>
    </StackPanel>
  </StackPanel>
</UserControl>

